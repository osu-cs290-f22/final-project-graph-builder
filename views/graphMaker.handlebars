<html>
    <head>
        <meta charset="utf-8">

        <!--For type, you specify the chart type and add "chart"
        so if you wanted this page to be a pie chart page, type would be "Pie Chart"
        if you wanted to make a bar graph, type would be "Bar Graph"-->

        <title>{{type}}</title>
        <script src= "/index.js" charset="utf-8" defer></script>

    </head>
    <body>
        {{> header titleText = type}}

        <div id = "graph-body">
            <div id = "graph-inputs">

                <h2>Graph Specifications:</h2>        
                
                <div class = "input-boxes-stylings">
                    <label>Title</label>
                    <div>
                        <input class="input-boxes" id="title" type="text">
                    </div>
                </div>
                <div class = "input-boxes-stylings">
                    <label>User's Name</label>
                    <div>
                        <input class="input-boxes" id="username" type="text">
                    </div>                    
                </div>
            


                <!--All of the inputs-->
                {{#each inputs}}
                    {{> input}}
                {{/each}}
        
            </div>

            <div id = "chart-container">
                <!--<canvas id = "myChart"></canvas> -->
            </div> 

            <!--This is where all of the specs are-->
            <div id = "graph-specs">
                <div id="initial-input-container">

                    <!--All of the specs-->
                    {{#each specs}}
                        {{> spec}}
                    {{/each}}

                    <!--The submit button-->
                    <button type="button" id="submit-button"><i class="fas fa-plus"></i></button>
                    
                </div>   
            </div>
        </div>
        

        
        <div>
            <button id="publish-button">Publish!</button>
        </div>        

        

    </body>
</html>