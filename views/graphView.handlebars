<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>View Other Graphs</title>
        <script src="viewer.js" charset="utf-8" defer></script>

    </head>
    <body>
        {{> header}}

        <div>
            <div id="filter-box">
                <div class="filter-div">
                    <label class="filter-box">Search for Title</label>
                    <div>
                        <input id="filter-title"  type="text">
                    </div>                    
                </div>

                <div class="filter-div">
                    <label class="filter-box">Search for Author</label>
                    <div>
                        <input id = "filter-author" type="text">
                    </div>                    
                </div>

                <div class="filter-div">
                    <label class="filter-box">Time Search</label>
                    <div class = "date-boxes-container">
                        <input class = "small-boxes" placeholder="Month" type="text">
                        <input class = "small-boxes" placeholder="Day" type="number">
                        <input class = "small-boxes" placeholder="Year" type="number">
                    </div>
                    <div class="small-text">
                        <p>To</p>
                    </div>
                    <div class = "date-boxes-container">
                        <input class = "small-boxes" placeholder="Month" type="text">
                        <input class = "small-boxes" placeholder="Day" type="number">
                        <input class = "small-boxes" placeholder="Year" type="number">
                    </div>
                </div>
                <div class="filter-div">
                    <label class="filter-box">Sort By:</label>
                    <div>
                        <select id="sort-by">
                           <option selected>Newest</option> 
                           <option>Oldest</option> 
                           <option>Most Liked</option>
                        </select>
                    </div>
                </div>

                <div id="filter-button-container">
                    <button id="filter-button">Search</button>                    
                </div>
            </div>

            <div id="all-posts">

                {{#each posts}}
                    {{> post}}
                {{/each}}
               
            </div>
        </div>
    </body>
</html>